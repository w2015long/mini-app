<!--index.wxml-->
<view class="container">
    <!-- 搜索框 开始 -->
    <SearchInput></SearchInput>
    <view class="swiper-box">
        <swiper autoplay indicator-dots circular>
            <swiper-item
                    wx:for="{{swiperList}}"
                    wx:key="goods_id"

            >
                <navigator url="{{item.navigator_url}}">
                    <image mode="widthFix" src="{{item.image_src}}"></image>
                </navigator>
            </swiper-item>
        </swiper>
    </view>
      <!-- 导航 开始 -->
  <view class="index_cate">
    <navigator 
    wx:for="{{categories}}"
    wx:key="name"
    url="/pages/category/index"
    open-type="switchTab"
    >
    <image mode="widthFix" src="{{item.image_src}}" ></image>
  </navigator>
  </view>
  <!-- 导航 结束 -->
    <!-- 楼层 开始 -->
  <view class="index_floor">
    <view class="floor_group"
    wx:for="{{floorList}}"
    wx:for-item="itemTop"
    wx:for-index="index1"
    wx:key="floor_title"
    >
      <!-- 标题 -->
      <view class="floor_title">
        <image mode="widthFix" src="{{itemTop.floor_title.image_src}}"></image>
      </view>
      <!-- 内容 -->
      <view class="floor_list">
        <navigator
        wx:for="{{itemTop.product_list}}"
        wx:for-item="itemBottom"
        wx:for-index="key"
        wx:key="name"
        url="{{itemBottom.navigator_url}}"
        >
        <image mode="{{key===0?'widthFix':'scaleToFill'}}" src="{{itemBottom.image_src}}"></image>
      </navigator>
      </view>
    </view>
  </view>
  <!-- 楼层 结束 -->
</view>
