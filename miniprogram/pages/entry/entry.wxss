page {
  background-color: rgb(228, 221, 206);
}
.container {
  width: 750rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.card {
  width: 700rpx;
  height: 30vh;
  border: 5rpx solid #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
  box-shadow: 4rpx 6rpx 12rpx 0rpx rgba(53, 59, 80, 0.13);
  opacity: 0.6;
  transition: all 1s;
  overflow: hidden;
}
.card:nth-child(1) {
  transform: rotate(12deg);
}
.card:nth-child(2) {
  transform: rotate(-15deg);
}
.card:nth-child(3) {
  transform: rotate(20deg);
}
.card.isActive {
  transform: rotate(0deg) scale(1.4);
  opacity: 1;
  z-index: 10;
}
.card image {
  width: 100%;
  height: 100%;
}
